<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient
                android:angle="90"
                android:centerColor="#9E9E9E"
                android:centerX="30%"
                android:endColor="#C9C9C9"
                android:startColor="#717171"
                android:type="linear" />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
            <size
                android:width="130dp"
                android:height="45dp" />
            <stroke
                android:width="0.5dp"
                android:color="#000000" />
        </shape>
    </item>
</layer-list>