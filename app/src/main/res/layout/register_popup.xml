<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_margin="1dp"
        android:background="@color/AccentColor"
        android:layout_gravity="center"

        >
            <TextView
                android:id="@+id/txtPopUp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textColor="@color/PrimaryText"
                android:text="@string/dynamicStudentName"
                />
            <ImageView
                android:layout_width="116dp"
                android:layout_height="116dp"
                android:src="@drawable/regpopup"
                android:layout_x="45dp"
                android:layout_y="67dp" />
            <Button
                android:id="@+id/goToProfile"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:background="@color/DividerText"
                android:textColor="@color/PrimaryText"
                android:text="המשך"
                android:shadowColor="@color/DarkPrimaryColor"
                android:layout_x="-1dp"
                android:layout_y="205dp" />

</AbsoluteLayout>
