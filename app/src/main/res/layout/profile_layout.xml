<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/nav_header_height"
        android:layout_marginBottom="30dp"
        android:background="@color/PrimaryColor"
        android:orientation="horizontal"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/studethat" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/studentNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:paddingRight="0dp"
                android:paddingTop="25dp"
                android:text="Android Studio"
                android:textSize="25dp"
                android:textColor="@color/TextIcons" />

            <TextView
                android:id="@+id/studentEmailTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/studentNameTxt"
                android:paddingTop="10dp"
                android:textSize="15dp"
                android:text="android.studio@android.com"
                android:textColor="@color/DividerText" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnAddCourse"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_shape"
        android:text="הוסף קורס / חפש פרטנר"
        android:textColor="@color/PrimaryText"
        android:textStyle="normal|bold" />


    <Button
        android:id="@+id/btnMyCourses"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnMyCourses"
        android:layout_alignStart="@+id/btnMyCourses"
        android:layout_below="@+id/btnMyCourses"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_shape"
        android:text="הקורסים שלי"
        android:textColor="@color/PrimaryText"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnEditInfo"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/btnAddCourse"
        android:layout_alignStart="@+id/btnAddCourse"
        android:layout_below="@+id/btnAddCourse"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="44dp"
        android:background="@drawable/button_shape"
        android:text="עדכון פרטים אישיים"
        android:textColor="@color/PrimaryText"
        android:textStyle="normal|bold" />
</LinearLayout>